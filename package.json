{
	"name": "lemons-search",
	"version": "0.0.5",
	"description": "A blazingly fast fuzzy finder with file preview.",
	"main": "main.js",
	"scripts": {
		"dev": "bun run automation/build/esbuild.dev.config.ts",
		"build": "bun run tsc && bun run automation/build/esbuild.config.ts",
		"tsc": "tsc -noEmit -skipLibCheck",
		"test": "bun test",
		"test:log": "LOG_TESTS=true bun test",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint --max-warnings=0 packages/obsidian/src/**",
		"lint:fix": "eslint --max-warnings=0 --fix packages/obsidian/src/**",
		"check": "bun run wasm:test && bun run wasm:build && bun run format:check && bun run tsc && bun run lint && bun run test &&",
		"check:fix": "bun run wasm:test && bun run wasm:fmt && bun run wasm:build && bun run format && bun run tsc && bun run lint:fix && bun run test",
		"release": "bun run automation/release.ts",
		"stats": "bun run automation/stats.ts",
		"wasm:search:build": "cd packages/lemons-search && wasm-pack build --target web",
		"wasm:search:dev": "cd packages/lemons-search && wasm-pack build --dev --target web",
		"wasm:search:profile": "cd packages/lemons-search && wasm-pack build --profiling --target web",
		"wasm:search:fmt": "cd packages/lemons-search && cargo fmt",
		"wasm:search:lint": "cd packages/lemons-search && cargo clippy",
		"wasm:search:test": "cd packages/lemons-search && wasm-pack test --node",
		"wasm:ui:build": "cd packages/lemons-search-ui && wasm-pack build --target web",
		"wasm:ui:dev": "cd packages/lemons-search-ui && wasm-pack build --dev --target web",
		"wasm:ui:profile": "cd packages/lemons-search-ui && wasm-pack build --profiling --target web",
		"wasm:ui:fmt": "cd packages/lemons-search-ui && cargo fmt",
		"wasm:ui:lint": "cd packages/lemons-search-ui && cargo clippy",
		"wasm:ui:test": "cd packages/lemons-search-ui && wasm-pack test --node",
		"wasm:build": "bun run wasm:search:build && bun run wasm:ui:build",
		"wasm:dev": "bun run wasm:search:dev && bun run wasm:ui:dev",
		"wasm:profile": "bun run wasm:search:profile && bun run wasm:ui:profile",
		"wasm:fmt": "bun run wasm:search:fmt && bun run wasm:ui:fmt",
		"wasm:lint": "bun run wasm:search:lint && bun run wasm:ui:lint",
		"wasm:test": "bun run wasm:search:test && bun run wasm:ui:test"
	},
	"keywords": [],
	"author": "Moritz Jung",
	"license": "GPL-3.0",
	"devDependencies": {
		"@lemons_dev/parsinom": "^0.0.12",
		"@happy-dom/global-registrator": "^14.3.6",
		"@tsconfig/svelte": "^5.0.3",
		"@types/bun": "^1.0.10",
		"@typescript-eslint/eslint-plugin": "^7.3.1",
		"@typescript-eslint/parser": "^7.3.1",
		"builtin-modules": "^3.3.0",
		"esbuild": "^0.23.1",
		"esbuild-plugin-copy-watch": "^2.3.1",
		"eslint": "^8.57.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-isaacscript": "^3.12.2",
		"eslint-plugin-only-warn": "^1.1.0",
		"obsidian": "latest",
		"prettier": "^3.2.5",
		"string-argv": "^0.3.2",
		"tslib": "^2.6.2",
		"typescript": "^5.4.3"
	},
	"dependencies": {
		"esbuild-plugin-inline-worker": "^0.1.1"
	}
}
